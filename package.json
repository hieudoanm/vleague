{
  "name": "vleague",
  "version": "0.0.1",
  "description": "V.League",
  "main": "index.js",
  "repository": "git@github.com:hieudoanm/vleague.git",
  "author": "hieudoanm <hieumdoan@gmail.com>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">= 14",
    "npm": ">= 8",
    "yarn": "1"
  },
  "scripts": {
    "build:graphql": "yarn workspace @service/graphql build",
    "build:apis": "yarn workspace @service/apis build",
    "build:shared": "yarn workspace shared build",
    "build:web": "yarn workspace web build",
    "build": "yarn build:shared && yarn build:apis && yarn build:web",
    "dev:graphql": "yarn workspace @service/graphql dev",
    "dev:apis": "yarn workspace @service/apis dev",
    "dev:web": "yarn workspace web dev",
    "dev": "concurrently --kill-others-on-fail \"yarn dev:apis\" \"yarn dev:graphql\" \"yarn dev:web\"",
    "lint:graphql": "yarn workspace @service/graphql lint",
    "lint:apis": "yarn workspace @service/apis lint",
    "lint:shared": "yarn workspace shared lint",
    "lint:web": "yarn workspace web lint",
    "lint": "yarn lint:shared && yarn lint:graphql && yarn lint:apis && yarn lint:web",
    "test:graphql": "yarn workspace @service/graphql test",
    "test:apis": "yarn workspace @service/apis test",
    "test:shared": "yarn workspace shared test",
    "test:web": "yarn workspace web test",
    "test": "yarn test:shared && yarn test:graphql && yarn test:apis && yarn test:web",
    "graph": "nx graph"
  },
  "dependencies": {
    "concurrently": "7.3.0"
  },
  "devDependencies": {
    "husky": "8.0.1",
    "nx": "14.4.3",
    "prettier": "2.7.1",
    "pretty-quick": "3.1.3",
    "@nrwl/nx-cloud": "latest"
  },
  "workspaces": [
    "packages/*",
    "services/*"
  ]
}
