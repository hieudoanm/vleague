{
  "name": "vleague",
  "version": "0.0.1",
  "description": "V.League",
  "main": "index.js",
  "repository": "git@github.com:hieudoanm/vleague.git",
  "author": "hieudoanm <hieumdoan@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build:data": "yarn workspace data build",
    "build:server": "yarn workspace server build",
    "build:shared": "yarn workspace shared build",
    "build:web": "yarn workspace web build",
    "build": "yarn build:shared && yarn build:server && yarn build:web && yarn build:data",
    "dev:data": "yarn workspace data dev",
    "dev:graphql": "yarn workspace graphql dev",
    "dev:server": "yarn workspace server dev",
    "dev:web": "yarn workspace web dev",
    "dev": "concurrently --kill-others-on-fail \"yarn dev:data\" \"yarn dev:server\" \"yarn dev:graphql\" \"yarn dev:web\"",
    "lint:data": "yarn workspace data lint",
    "lint:graphql": "yarn workspace graphql lint",
    "lint:server": "yarn workspace server lint",
    "lint:shared": "yarn workspace shared lint",
    "lint:web": "yarn workspace web lint",
    "lint": "yarn lint:shared && yarn lint:data && yarn lint:graphql && yarn lint:server && yarn lint:web",
    "test:data": "yarn workspace data test",
    "test:graphql": "yarn workspace graphql test",
    "test:server": "yarn workspace server test",
    "test:shared": "yarn workspace shared test",
    "test:web": "yarn workspace web test",
    "test": "yarn test:shared && yarn test:data && yarn test:graphql && yarn test:server && yarn test:web"
  },
  "dependencies": {
    "concurrently": "7.2.2"
  },
  "devDependencies": {
    "husky": "8.0.1",
    "prettier": "2.7.1",
    "pretty-quick": "3.1.3"
  },
  "workspaces": [
    "packages/*"
  ]
}
